{
  "name": "sparc-syntax",
  "displayName": "SPARC Syntax",
  "description": "Syntax highlighting for SPARC language",
  "version": "1.0.0",
  "publisher": "Sonal Jayasinghe",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Programming Languages", "Themes"
  ],
  "contributes": {
    "languages": [{
      "id": "sparc",
      "aliases": ["SPARC", "sparc"],
      "extensions": [".sp"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "sparc",
      "scopeName": "source.sparc",
      "path": "./syntaxes/sparc.tmLanguage.json"
    }],
    "themes": [
      {
        "label": "SPARC Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/sparc-dark.json"
      },
      {
        "label": "SPARC Light",
        "uiTheme": "vs",
        "path": "./themes/sparc-light.json"
      }
    ]
  }
}
