{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "SPARC",
	"patterns": [
		{"include": "#directives"},
		{"include": "#sorts"},
		{"include": "#predicates"}

	],
	"repository": {
		"directives": {
			"patterns": [
			{
				"name": "keyword.directive.sparc",
				"match": "#(const|maxint)\\b"
			},
			{
  				"name": "variable.parameter.sparc",
  				"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
			},
			{
  				"name": "constant.numeric.sparc",
  				"match": "\\b\\d+\\b"
			}
		]
		},

		"sorts": {
			"patterns": [
			{
				"name": "keyword.sorts.section.sparc",
				"match": "\\bsorts\\b"
			},
			{
  				"name": "keyword.sort.declaration.sparc",
  				"match": "#[a-zA-Z_][a-zA-Z0-9_]*"
			}
		]
		},

		"predicates": {
			"patterns": [
			{
				"name": "keyword.predicates.section.sparc",
				"match": "\\predicates\\b"
			},
			{
  				"name": "keyword.predicates.declaration.sparc",
  				"match": "\\b[a-z][a-zA-Z0-9_]*\\s*(?=\\()"
			}
		]
		}



	},
	"scopeName": "source.sparc"
}