{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "SPARC",
	"patterns": [
		{"include": "#directives"},
		{"include": "#sorts"},
		{"include": "#predicates"},
		{"include": "#rules"},
		{"include": "#comments"},
		{"include": "#logics_relations"},
		{"include": "#function_records"}
		



	],
	"repository": {
		"directives": {
			"patterns": [
			{
				"name": "keyword.directive.sparc",
				"match": "#(const|maxint)\\b"
			},
			{
  				"name": "variable.parameter.sparc",
  				"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
			},
			{
  				"name": "constant.numeric.sparc",
  				"match": "\\b\\d+\\b"
			}
		]
		},

		"sorts": {
			"patterns": [
			{
				"name": "keyword.sorts.section.sparc",
				"match": "\\bsorts\\b"
			},
			{
  				"name": "keyword.sort.declaration.sparc",
  				"match": "#[a-zA-Z_][a-zA-Z0-9_]*"
			}
		]
		},

		"predicates": {
			"patterns": [
			{
				"name": "keyword.predicates.section.sparc",
				"match": "\\predicates\\b"
			},
			{
  				"name": "keyword.predicates.declaration.sparc",
  				"match": "\\b[a-z][a-zA-Z0-9_]*\\s*(?=\\()"
			}
		]
		},
		"rules": {
			"patterns": [
			{
				"name": "keyword.rules.section.sparc",
				"match": "\\brules\\b"
			},
			{
				"name": "keyword.operator.rule.sparc",
				"match": ":-"
			},
			{
				"name": "keyword.operator.cr-rule.sparc",
				"match": ":[+]"
			},
			{
				"name": "keyword.operator.not.sparc",
				"match": "\\bnot\\b"
			},
			{
				"name": "keyword.operator.comma.sparc",
				"match": ","
			}
		]
		},
		"comments": {
			"patterns": [
			{
				"name": "comment.line.sparc",
				"match": "%.*$"
			}
		]
		},

		"logics_relations": {
			"patterns": [
				{
				"name": "keyword.operator.logical.sparc",
				"match": "(=|!=|<=|<)"
		}
		]
		},
		"function_records": {
			"patterns": [
				{
				"name": "entity.predicate.sparc",
  				"match": "\\b[a-z][a-zA-Z0-9_]*\\s*(?=\\()"
		}
		]
		}



	},
	"scopeName": "source.sparc"
}