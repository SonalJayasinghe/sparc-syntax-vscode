{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "SPARC",
	"patterns": [
		{"include":"#defines"},
		{"include":"#objects"},
		{"include": "#directives"},
		{"include": "#sorts"},
		{"include": "#predicates"},
		{"include": "#rules"},
		{"include": "#comments"},
		{"include": "#variable"}
		
	],
	"repository": {

		"defines":{
			"patterns": [
				{
				"name": "keyword.sorts.section.sparc",
				"match": "\\bsorts\\b"
			},
			{
				"name": "keyword.predicates.section.sparc",
				"match": "\\bpredicates\\b"
			},
			{
				"name": "keyword.rules.section.sparc",
				"match": "\\brules\\b"
			}
			]
		},

		"directives": {
			"patterns": [
			{
				"name": "keyword.directive.sparc",
				"match": "#(const|maxint)\\b"
				
			},
			{
  				"name": "constant.numeric.sparc",
  				"match": "\\b\\d+\\b"
			}
		]
		},

		"objects":{
			"patterns": [
				
			{
				"name": "keyword.objects.sparc",
				"match": "\\b(?!not\\b)([a-z][a-zA-Z0-9_]*)\\b(?!\\s*\\()"
			}
			]
		},



		"sorts": {
			"patterns": [
			
			{
  				"name": "keyword.sort.declaration.sparc",
  				"match": "#[a-z][a-zA-Z0-9_]*"
			}
		]
		},

		"predicates": {
			"patterns": [
			
			{
  				"name": "keyword.predicates.declaration.sparc",
  				"match": "\\b[a-z][a-zA-Z0-9_]*\\s*(?=\\()"
			}
		]
		},
		"rules": {
			"patterns": [
			
			{
				"name": "keyword.operator.rule.sparc",
				"match": ":-"
			},
			{
				"name": "keyword.operator.cr-rule.sparc",
				"match": ":[+]"
			},
			{
				"name": "keyword.operator.not.sparc",
				"match": "\\bnot\\b"
			},
			{
				"name": "keyword.operator.comma.sparc",
				"match": ","
			}
		]
		},
		"comments": {
			"patterns": [
			{
				"name": "comment.line.sparc",
				"match": "%.*$"
			}
		]
		},
		"variable": {
			"patterns": [
			{
				"name": "variable.sparc",
				"match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
			}
		]
		}
	},
	"scopeName": "source.sparc"
}